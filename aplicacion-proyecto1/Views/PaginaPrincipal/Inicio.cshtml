@{
    ViewData["Title"] = "Sistema de Reserva de Viajes";
}
<h1>@ViewData["Title"]</h1>

<input type="hidden" value="@TempData["Usuario"]" />

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Personas" asp-action="Edit" asp-route-id="@TempData["Usuario"]">Editar Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="SeleccionBuses" asp-action="Seleccion" asp-route-id="@TempData["Usuario"]">Reservar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Details" asp-route-id="@TempData["Usuario"]">Historial de compras</a>
                </li>
            </ul>
        </div>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Cerrar Sesión</a>
                </li>
            </ul>
        </div>
    </div>
