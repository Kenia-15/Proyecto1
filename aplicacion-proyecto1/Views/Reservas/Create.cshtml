@model aplicacion_proyecto1.Models.TblReserva

@{
    ViewData["Title"] = "Create";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
    </div>
}
<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <input type="hidden" asp-for="IdHorario" class="form-control" asp-items="ViewBag.IdHorario"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EstadoPago" class="form-control" value="C"/>
            </div>
            <div class="form-group">
                <input type="hidden" disabled asp-for="EstadoPago" id="IdHorario" class="form-control" value="@ViewData["Horario"]" />
            </div>
            <div class="form-group">
                <label class="control-label">Precio por asiento</label>
                <p disabled id="precio" class="form-control">@ViewData["Precio"]</p>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <p disabled id="fecha" class="form-control">@ViewData["Fecha"]</p>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" disabled class="form-control" value="@ViewData["Hora"]" />
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad de asientos disponibles</label>
                <input disabled class="form-control" value="@ViewData["Asientos"]" />
            </div>
            <div class="form-group">
                <label asp-for="NumeroAsientos" class="control-label">Digete el número de asiento a reservar</label>
                <input asp-for="NumeroAsientos" class="form-control" />
            </div>
            <br>
          

            <div class="form-group">
                <input type="submit" asp-route-hora="@ViewData["Hora"]" asp-route-fecha="@ViewData["Fecha"]" asp-route-asientos="@ViewData["Asientos"]" asp-route-hor="@ViewData["Horario"]" value="Realizar Reserva" class="btn" style="background-color:#f9a492" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="Inicio" asp-controller="PaginaPrincipal">Volver al inicio</a>
</div>

