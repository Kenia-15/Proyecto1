@model aplicacion_proyecto1.Models.IniciarSesion

@{
    ViewData["Title"] = "Login";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
    </div>
}


<div>
    <h1 class="display-4">Iniciar Sesión</h1>
        <div class="col-md-4">
            <form method="post" class="form-floating">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="email" class="control-label">Email</label>
                    <input asp-for="email" type="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="contrasena" class="control-label">Contraseña</label>
                    <input asp-for="contrasena" type="password" class="form-control" />
                </div>
            <br />
                <div class="form-group">
                    <input type="submit" asp-action="IniciarSesion" value="Iniciar Sesión" class="btn btn-primary" />
                </div>
            </form>
            <br />
            <li class="nav-item">
                ¿No tienes una cuenta? <a asp-area="" asp-controller="Registro" asp-action="">Registrarse</a>
            </li>
        </div>   
</div>
